<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rewards_gradient"
    tools:context=".RegisterActivity">


    <View
        android:id="@+id/divider8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login"
        android:layout_alignTop="@+id/imgView"
        android:layout_alignBottom="@+id/imgView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white" />

    <EditText
        android:id="@+id/signin_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="110dp"

        android:ems="10"
        android:hint="Email Address or Phone Number"
        android:inputType="textPersonName"
        android:textColorHighlight="#70ffffff" />
    <EditText android:layout_height="50dp"
        android:layout_width="300dp"
        android:layout_marginStart="25dp"
        android:id="@+id/signin_password"
        android:layout_marginTop="200dp"
        android:textSize="24sp"

        android:inputType="textPassword"
        android:hint="Password"/>
    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="25dp"
        android:background="@color/blue"
        android:enabled="false"
        android:text="Log In"
        android:textColor="@color/white" />

    <TextView
        android:layout_height="40dp"
        android:layout_width="331dp"
        android:id="@+id/logo12"
        android:layout_marginStart="150dp"
        android:layout_marginTop="350dp"
        android:text="Forget Password"
        android:gravity="center"
        android:textColor="@color/blue"/>




    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="408dp"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/imgView"
        android:textColor="@color/white"
        android:text="or"
        />

    <Button
        android:id="@+id/signUp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="450dp"
        android:background="#42b72a"
        android:text="Create New User"
        android:textColor="@color/white" />



    <View
        android:id="@+id/divider9"
        android:layout_width="170dp"
        android:layout_height="2dp"
        android:layout_alignStart="@+id/login"
        android:layout_alignBottom="@+id/imgView"
        android:layout_marginStart="-21dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white" />


</RelativeLayout>