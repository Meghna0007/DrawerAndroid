<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Create New User"
        android:textColor="@color/black"
        android:textSize="25sp" />
<EditText
    android:id="@+id/ffulname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="20dp"
    android:ems="10"
    android:backgroundTint="@color/blue"
    android:autoSizeMaxTextSize="16dp"
    android:hint="Enter Name "
    android:textColor="@color/black"
    />

    <EditText
        android:id="@+id/BusinessName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:autoSizeMaxTextSize="16dp"
        android:hint="Bussiness/Shop name"
        android:textColor="@color/black"
        android:backgroundTint="@color/blue"
        android:ems="10"/>
    <EditText
        android:id="@+id/PanNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:autoSizeMaxTextSize="16dp"
        android:hint="PAN No."
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:ems="10"/>
    <EditText
        android:id="@+id/AadharNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:autoSizeMaxTextSize="16dp"
        android:hint="Aadhar No."
        android:textColor="@color/black"
        android:backgroundTint="@color/blue"
        android:ems="10"/>

    <EditText
        android:id="@+id/GstNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:autoSizeMaxTextSize="16dp"
        android:hint="GST NO."
        android:textColor="@color/black"
        android:ems="10"/>

    <EditText
        android:id="@+id/sign_up_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:autoSizeMaxTextSize="16dp"
        android:hint="Enter Email here... "
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:inputType="textEmailAddress" />



    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:autoSizeMaxTextSize="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Password (Atleast 6 digits)"
        android:layout_marginTop="15dp"
        android:inputType="numberPassword"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"/>


    <EditText
        android:id="@+id/sign_up_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:autoSizeMaxTextSize="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Re-Type Password"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:inputType="numberPassword" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:hint="Mobile No."
            android:inputType="number"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:autoSizeMaxTextSize="16dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:autoSizeMaxTextSize="16dp"
            android:autoSizeMinTextSize="16dp"
            android:clickable="false"
            android:layout_weight="2"
            android:hint="OTP"
            android:backgroundTint="@color/blue"
            android:inputType="number"
            android:textColor="@color/black" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_generate_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/transparent"
            android:stateListAnimator="@null"
            android:text="Generate"
            android:textAllCaps="false"
            android:textColor="@color/black" />



        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/transparent"
            android:stateListAnimator="@null"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:backgroundTint="@color/blue"
        android:text="Submit"
        android:visibility="visible"
        android:textColor="#50ffffff" />

    <TextView
        android:id="@+id/alreadyHaveAnAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&lt; &lt; Already Have An Account"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:textColor="@color/red"
        android:textStyle="italic"
        android:layout_marginTop="15dp" />

</LinearLayout>